{
  "name": "@querent/wasm-chord-node",
  "version": "0.1.0-alpha", 
  "description": "WebAssembly LLM inference runtime for Node.js - Memory64 optimized",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:wasm && npm run build:ts",
    "build:wasm": "wasm-pack build ../../crates/wasm-chord-runtime --target nodejs --out-dir ../../bindings/js/pkg-node",
    "build:ts": "tsc src/index.ts --outDir dist --target es2020 --module commonjs --moduleResolution node --declaration",
    "test": "echo \"Node tests not yet implemented\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "llm", 
    "inference",
    "ai",
    "machine-learning",
    "memory64",
    "nodejs",
    "transformer"
  ],
  "author": "Querent AI <team@querent.xyz>",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/querent-ai/wasm-chord"
  },
  "files": [
    "dist/",
    "pkg/",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
